<Window x:Class="GIBDD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GIBDD"
        mc:Ignorable="d"
        Title="{Binding Content.Title,ElementName=MainFrame}" 
        Height="700" Width="1200" MinWidth="1200" MinHeight="700"
        Deactivated="Window_Deactivated" Activated="Window_Activated">
    <Grid Background="{StaticResource Basic1Background}">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <TextBlock Text="ГИБДД" FontSize="30"/>
        <Image Source="/UI/SystemImage/gibdd_logo.png"
               Margin="5" HorizontalAlignment="Left"/>

        <Frame Grid.Row="1" NavigationUIVisibility="Hidden"
               Background="{StaticResource Basic2Background}"
               x:Name="MainFrame" ContentRendered="MainFrame_ContentRendered"/>
        <Button HorizontalAlignment="Right" Content="Назад"
                x:Name="BackBtn" Click="BackBtn_Click"/>
    </Grid>
</Window>
